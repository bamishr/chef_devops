/var/log/mysql/mysql-<%= @instance %>-error.log /var/log/mysql/mysql-<%= @instance %>-slow.log {
        notifempty
        daily
        rotate 3
        missingok
        create 640 mysql mysql
        compress
        sharedscripts
        postrotate
          if test -x /usr/bin/mysqladmin && \
            /usr/bin/mysqladmin --defaults-file=/local/mysql-<%= @instance %>/etc/mysql/debian.cnf ping &>/dev/null
          then
            chown -R mysql.mysql /var/log/mysql/ && /usr/bin/mysqladmin --defaults-file=/local/mysql-<%= @instance %>/etc/mysql/debian.cnf flush-logs
          fi
        endscript
}

