# Generated by Chef for <%= node['hostname'] %>.
# Local modifications will be overwritten.

<% case node['platform'] -%>
<% when "debian","ubuntu" -%>
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, RELOAD, SHUTDOWN, PROCESS, FILE, REFERENCES, INDEX, ALTER, SHOW DATABASES, SUPER, CREATE TEMPORARY TABLES, LOCK TABLES, EXECUTE, REPLICATION SLAVE, REPLICATION CLIENT ON *.* TO 'debian-sys-maint'@'localhost' IDENTIFIED BY '<%= @mysql_debian_passwd %>' WITH GRANT OPTION;
GRANT PROCESS ON *.* TO 'clustercheck'@'localhost' IDENTIFIED BY '<%= @clustercheck_passwd %>';
GRANT REPLICATION CLIENT ON *.* TO 'datadog'@'localhost' IDENTIFIED BY '<%= @datadog_passwd %>';
<% end -%>
# Grant User Perms
<% unless @user_grants.nil? -%>
<% @user_grants.each do |ugrant| -%>
<%= ugrant %>
<% end -%>
<% end -%>
# Grant Client Perms
<% unless @client_grants.nil? -%>
<% @client_grants.each do |cgrant| -%>
<%= cgrant %>
<% end -%>
<% end -%>
